<div class="section">
  <div class="container">
    <p class="text center">Select your instrument</p>
    <div class="row">

      {{#each model as |instrument|}}
      <div class="row__item">
        <div class="instrument hvr-fade">
          {{#link-to 'instrument.challenge' instrument}}
            <h3 class="instrument__title text__title section">{{instrument.title}}</h3>
            <div class="instrument__bg instrument__bg--{{instrument.slug}}"></div>
          {{/link-to}}
        </div>
      </div>
      {{/each}}

    </div>
  </div>
</div>
