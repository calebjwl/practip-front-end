<div class="section">
  <div class="container">
    <h1>Upload Video</h1>

    <form {{action "submitVideo" on="submit"}}>
      <p>{{input type="url" value=formValues.videoUrl placeholder="Video URL"}}</p>
      <p>{{input type="text" value=formValues.title placeholder="Post Title"}}</p>
      <p>{{input type="text" value=formValues.description placeholder="Post Description"}}</p>
      {{#link-to 'instrument.challenge.video'}}
        {{!-- <button class="button__black">Back</button> --}}
      {{/link-to}}
      <button class="button__black">Submit</button>
    </form>
  </div>
</div>
