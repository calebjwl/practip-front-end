{{#modal-dialog translucentOverlay=true close="closeModalDialog"}}
  <div class="section center">
    <h1 class="text__title section">Upload Video</h1>
    {{#with (changeset formValues) as |changeset|}}
      <form {{action "submitVideo" changeset on="submit"}}>
        {{input type="url" value=changeset.videoUrl placeholder="URL" class="form"}}
        <p>{{input type="text" value=changeset.title placeholder="Title" class="form"}}</p>
        <p>{{textarea type="text" value=changeset.description placeholder="Description" class="form"}}</p>
        <button class="button button--black button--fullwidth">Submit</button>
        {{#link-to 'instrument.challenge.video'}}
          <button class="button button--black button--fullwidth">Back</button>
        {{/link-to}}
      </form>
    {{/with}}
  </div>
{{/modal-dialog}}
