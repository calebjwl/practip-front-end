<div class="section new-challenge">
  <div class="container">
    <div class="form-box center">
      {{#with (changeset model formValidations) as |formValues|}}
        <form {{action "submitChallenge" changeset on="submit"}}>
          {{input type="text" value=formValues.title class="form" placeholder="Title" changeset=formValues}}
          {{textarea rows="10" value=formValues.description class="form" placeholder="Description" changeset=formValues}}
          <div class="button-bar">
            {{#link-to 'instrument.challenge'}}
              <div class="button button--black">back</div>
            {{/link-to}}
            <button class="button button--black">submit</button>
          </div>
        </form>
      {{/with}}
    </div>
  </div>
</div>
