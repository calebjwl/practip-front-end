<div class="section new-challenge">
  <div class="container">
    <div class="new-challenge-form">
      <form {{action "submitChallenge" on="submit"}}>
        {{input type="text" value=formValues.title class="form" placeholder="Title"}}
        {{textarea rows="10" cols="45" value=formValues.description class="form" placeholder="Description"}}
        <div class="button-bar">
          {{#link-to 'instrument.challenge'}}<button class="button__black">back</button>{{/link-to}}
          <button class="button__black">submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
