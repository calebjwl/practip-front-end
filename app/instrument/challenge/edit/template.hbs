<div class="section new-challenge">
  <div class="container">
    {{#with (changeset model ChallengeValidations) as |changeset|}}
    {{!-- {{#with (changeset model) as |changeset|}} --}}
      <div class="new-challenge__border">
        <form {{action "saveEdits" changeset on="submit"}}>
          <div class="section">
            {{input type="text" value=changeset.title class="form" placeholder="Title"}}
          </div>
          <div class="section">
            {{textarea rows="10" value=changeset.description class="form" placeholder="Description"}}
          </div>
          <div class="section">
            {{#link-to 'instrument.challenge'}}
              <button class="button__black">back</button>
            {{/link-to}}
            <button class="button__black">submit</button>
          </div>
        </form>
      </div>
    {{/with}}
    <ul>
      {{#each changeset.errors as |errorSet|}}
        {{#each changeset.validation as |error|}}
          <li>{{error}}</li>
        {{/each}}
      {{/each}}
    </ul>
  </div>
</div>
