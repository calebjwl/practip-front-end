<div class="section">
  <div class="container">
    <div class="center">
      {{#with (changeset model) as |form|}}
        <form {{action "login" form on="submit"}} class="login section">
          {{input type="text" name="your-name" value=form.username size="40" class="form" placeholder="Username"}}
          {{input type="password" name="your-password" value=form.password size="40" class="form" placeholder="Password"}}
          <div class="section">
            <button class="button button--black button--fullwidth">sign in</button>
          </div>
          <p>Don't have an account? {{#link-to 'login.register'}}Register here{{/link-to}}</p>
        </form>
      {{/with}}
    </div>
  </div>
</div>
